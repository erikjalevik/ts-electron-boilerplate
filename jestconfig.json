{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/_tests/.*|(\\.|/)(spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "mapCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx,js,jsx}"
  ],
  "globals": {
    "ts-jest": {
      "skipBabel": true,
      "enableTsDiagnostics": true
    }
  }
}